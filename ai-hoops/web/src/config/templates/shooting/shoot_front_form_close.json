{
  "templateId": "shoot_front_form_close",
  "mode": "shooting",
  "camera": "front",
  "displayName": "正面｜近距离 Form Shot",
  "ageGroups": ["6-8", "9-12", "13-15", "16-18"],
  "options": { "shootingHand": "right" },
  "overallWeights": { "posture": 0.4, "execution": 0.4, "consistency": 0.2 },
  "metrics": [
    {
      "metricId": "P_elbow_tuck",
      "category": "posture",
      "weight": 0.55,
      "type": "rangeByAge",
      "computeKey": "elbowToTorsoDistanceNorm",
      "params": {
        "ranges": {
          "6-8":   { "L": 0.10, "U": 0.28, "margin": 0.10 },
          "9-12":  { "L": 0.08, "U": 0.24, "margin": 0.08 },
          "13-15": { "L": 0.06, "U": 0.22, "margin": 0.08 },
          "16-18": { "L": 0.06, "U": 0.22, "margin": 0.08 }
        }
      },
      "hint_bad": "手肘外撇/离肋骨太远：让肘更贴近身体一侧，出手线路更直。"
    },
    {
      "metricId": "P_wrist_cross_midline",
      "category": "posture",
      "weight": 0.45,
      "type": "rangeByOption",
      "computeKey": "wristMidlineOffsetNorm",
      "params": {
        "optionKey": "shootingHand",
        "ranges": {
          "right": { "L": 0.05, "U": 0.80, "margin": 0.10 },
          "left":  { "L": -0.80, "U": -0.05, "margin": 0.10 }
        }
      },
      "hint_bad": "出手手越过身体中线：把出手保持在自己这侧，更稳定更准。"
    },

    {
      "metricId": "E_release_line_stability",
      "category": "execution",
      "weight": 1.0,
      "type": "target",
      "computeKey": "wristXStdDuringReleaseNorm",
      "params": { "target": 0.04, "tol": 0.03, "margin": 0.05 },
      "hint_bad": "出手路线左右飘：让手走直线，不要横向甩。"
    },

    {
      "metricId": "C_rep_consistency",
      "category": "consistency",
      "weight": 1.0,
      "type": "target",
      "computeKey": "repScoreStd",
      "params": { "target": 6, "tol": 6, "margin": 10 },
      "hint_bad": "每一投差异大：先慢速 form shot，追求每次动作一样。"
    }
  ]
}
